#!/local/bin/perl5
# -*- tab-width: 4 -*-

use strict;
use lib 'lib';

use Getopt::Long;

use LXR::Files;
use LXR::Index;
use LXR::Config;
use LXR::Tagger;

my %option;
GetOptions(\%option, "url=s", "version=s", "allurls!", "allversions!");

die("URL and version must be specified") 
	unless $option{'url'} && $option{'version'};

$Conf = new LXR::Config($option{'url'});

die("No matching configuration") unless $Conf->sourceroot;

my $files = new LXR::Files($Conf->sourceroot);
my $index = new LXR::Index($Conf->dbname);

genxref('/', $option{'version'});

sub genxref {
	my ($pathname, $release) = @_;
	
	print(STDERR "*** $pathname $release \n");

	if ($pathname =~ m|/$|) {
		map { 
			genxref($pathname.$_, $release) 
			} $files->getdir($pathname, $release);
	}
	else {
		&LXR::Tagger::processfile($pathname, $release, 
								  $Conf, $files, $index);

#  		my $tagger = new LXR::Tagger($pathname, $Conf);
#  		if ($tagger) {
